<!-- views/partials/header.ejs -->
<header class="header">
    <div class="container">
        <!-- Logo -->
        <div class="logo">ðŸ“š Apni Book</div>

        <% if (user) { %>
            <!-- Search Bar -->
            <div class="search-bar">
                <form action="/search" method="GET">
                    <input type="text" name="query" placeholder="Search by title, author, ID">
                    <button type="submit">Search</button>
                </form>
            </div>

            <!-- Profile -->
            <div class="profile-btn" id="profileBtn">
                <img src="<%= user.picUrl %>" alt="Profile" id="headerprofile-Img">
                <div class="profile-dropdown" id="profileDropdown">
                    <a href="/profile">Profile</a>
                    <a href="/logout">Logout</a>
                </div>
            </div>
            <% } %>
    </div>
</header>

<style>
    /* Header Base */
    .header {
        background: #6C63FF;
        color: #fff;
        position: sticky;
        top: 0;
        z-index: 100;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    /* Centered container */
    .header .container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 12px 20px;
    }

    /* Logo */
    .header .logo {
        font-size: 24px;
        font-weight: 700;
        flex-shrink: 0;
    }

    /* Search Bar */
    .header .search-bar {
        flex: 1;
        max-width: 600px;
        margin: 0 20px;
    }

    .header .search-bar form {
        display: flex;
        width: 100%;
    }

    .header .search-bar input {
        flex: 1;
        padding: 10px 14px;
        border-radius: 8px 0 0 8px;
        border: none;
        outline: none;
        font-size: 16px;
    }

    .header .search-bar button {
        padding: 10px 18px;
        border-radius: 0 8px 8px 0;
        border: none;
        background: #fff;
        color: #6C63FF;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .header .search-bar button:hover {
        background: #eee;
    }

    /* Profile */
    .profile-btn {
        position: relative;
        cursor: pointer;
        flex-shrink: 0;
    }

    .profile-btn img {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        border: 2px solid #fff;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .profile-btn img:hover {
        transform: scale(1.1);
    }

    /* Dropdown */
    .profile-dropdown {
        position: absolute;
        top: 55px;
        right: 0;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        min-width: 140px;
        opacity: 0;
        pointer-events: none;
        transform: translateY(-10px);
        transition: all 0.3s ease;
        z-index: 1000;
    }

    .profile-dropdown.show {
        opacity: 1;
        pointer-events: auto;
        transform: translateY(0);
    }

    .profile-dropdown a {
        display: block;
        padding: 10px 15px;
        color: #333;
        font-weight: 500;
        transition: background 0.2s ease;
    }

    .profile-dropdown a:hover {
        background: #f0f0ff;
        color: #6C63FF;
    }

    .profile-dropdown::before {
        content: '';
        position: absolute;
        top: -7px;
        right: 15px;
        border-width: 0 7px 7px 7px;
        border-style: solid;
        border-color: transparent transparent #fff transparent;
    }

    /* Responsive */
    @media (max-width: 900px) {
        .header .container {
            flex-direction: column;
            align-items: flex-start;
        }

        .header .search-bar {
            width: 100%;
            max-width: 100%;
            margin: 10px 0;
        }

        .profile-btn {
            margin-top: 10px;
        }
    }
</style>