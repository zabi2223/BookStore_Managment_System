<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Home | Apni Book</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('partials/header') %>

        <div class="main-container">
            <aside class="filters">
                <h3>Filter Books</h3>
                <form id="filterForm">
                    <label>Price Range:</label>
                    <input type="number" placeholder="Min" name="minPrice">
                    <input type="number" placeholder="Max" name="maxPrice">
                    <label>Published Date:</label>
                    <input type="date" name="date">
                    <button type="submit">Apply</button>
                    <button type="reset" id="resetFilter">Reset</button>
                </form>
            </aside>

            <section class="book-list">
                <div class="top-bar">
                    <a href="/addBook" class="add-btn">+ Add Book</a>
                </div>

                <table>
                    <thead>
                        <tr>
                            <th>Unique ID</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Published</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% books.forEach(book=> { %>
                            <tr>
                                <td>
                                    <%= book.uniqueId %>
                                </td>
                                <td>
                                    <%= book.title %>
                                </td>
                                <td>
                                    <%= book.author %>
                                </td>
                                <td>
                                    <%= book.publishedDate.toDateString() %>
                                </td>
                                <td>
                                    <a href="/editBook/<%= book._id %>" class="edit-btn">Edit</a>
                                    <form action="/deleteBook/<%= book._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="delete-btn">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>

                <div class="pagination">
                    <% for (let i=1; i <=totalPages; i++) { %>
                        <a href="/home?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>">
                            <%= i %>
                        </a>
                        <% } %>
                </div>
            </section>
        </div>

        <%- include('partials/footer') %>
            <script src="/js/script.js"></script>
</body>

</html>